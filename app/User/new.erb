<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New user</h1>
    <a href="<%= Rho::Application.startURI %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @user.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="user[username]" class="fieldLabel">Username</label>
            <input type="text" id="user[username]" name="user[username]" <%= placeholder("Username") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="user[email]" class="fieldLabel">Email</label>
            <input type="text" id="user[email]" name="user[email]" <%= placeholder("Email") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="user[phone]" class="fieldLabel">Phone</label>
            <input type="text" id="user[phone]" name="user[phone]" <%= placeholder("Phone") %> />
          </div>
      
      
          <div data-role="fieldcontain">
            <label for="user[occupation]" class="fieldLabel">Occupation</label>
            <input type="text" id="user[occupation]" name="user[occupation]" <%= placeholder("Occupation") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
