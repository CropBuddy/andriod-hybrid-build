<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @article.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @article.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="article[title]" class="fieldLabel">Title</label>
            <input type="text" id="article[title]" name="article[title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[keywords]" class="fieldLabel">Keywords</label>
            <input type="text" id="article[keywords]" name="article[keywords]" <%= placeholder("Keywords") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[meta_data]" class="fieldLabel">Meta data</label>
            <input type="text" id="article[meta_data]" name="article[meta_data]" <%= placeholder("Meta data") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="article[content]" class="fieldLabel">Content</label>
            <input type="text" id="article[content]" name="article[content]" <%= placeholder("Content") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
