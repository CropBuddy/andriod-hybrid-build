<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @pest_disease.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @pest_disease.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="pest_disease[name]" class="fieldLabel">Name</label>
            <input type="text" id="pest_disease[name]" name="pest_disease[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[category]" class="fieldLabel">Category</label>
            <input type="text" id="pest_disease[category]" name="pest_disease[category]" <%= placeholder("Category") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[details]" class="fieldLabel">Details</label>
            <input type="text" id="pest_disease[details]" name="pest_disease[details]" <%= placeholder("Details") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[crops_affected]" class="fieldLabel">Crops affected</label>
            <input type="text" id="pest_disease[crops_affected]" name="pest_disease[crops_affected]" <%= placeholder("Crops affected") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[causes]" class="fieldLabel">Causes</label>
            <input type="text" id="pest_disease[causes]" name="pest_disease[causes]" <%= placeholder("Causes") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[symptoms]" class="fieldLabel">Symptoms</label>
            <input type="text" id="pest_disease[symptoms]" name="pest_disease[symptoms]" <%= placeholder("Symptoms") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[causes]" class="fieldLabel">Causes</label>
            <input type="text" id="pest_disease[causes]" name="pest_disease[causes]" <%= placeholder("Causes") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[control]" class="fieldLabel">Control</label>
            <input type="text" id="pest_disease[control]" name="pest_disease[control]" <%= placeholder("Control") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="pest_disease[image_uri]" class="fieldLabel">Image uri</label>
            <input type="text" id="pest_disease[image_uri]" name="pest_disease[image_uri]" <%= placeholder("Image uri") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
