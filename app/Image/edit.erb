<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @image.image_uri %></h1>
    <a href="<%= url_for :action => :show, :id => @image.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @image.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @image.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="image[image_uri]" class="fieldLabel">Image uri</label>
            <input type="text" id="image[image_uri]" name="image[image_uri]" value="<%= @image.image_uri %>" <%= placeholder( "Image uri" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="image[latitude]" class="fieldLabel">Latitude</label>
            <input type="text" id="image[latitude]" name="image[latitude]" value="<%= @image.latitude %>" <%= placeholder( "Latitude" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="image[longitude]" class="fieldLabel">Longitude</label>
            <input type="text" id="image[longitude]" name="image[longitude]" value="<%= @image.longitude %>" <%= placeholder( "Longitude" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="image[created_at]" class="fieldLabel">Created at</label>
            <input type="text" id="image[created_at]" name="image[created_at]" value="<%= @image.created_at %>" <%= placeholder( "Created at" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
