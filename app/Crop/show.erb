<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @crop.name %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @crop.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @crop.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Categories</div>
            <div class="itemValue"><%= @crop.categories %></div>
          </li>
      
          <li>
            <div class="itemLabel">Altitude</div>
            <div class="itemValue"><%= @crop.altitude %></div>
          </li>
      
          <li>
            <div class="itemLabel">SoilType</div>
            <div class="itemValue"><%= @crop.soil_type %></div>
          </li>
      
          <li>
            <div class="itemLabel">Pest</div>
            <div class="itemValue"><%= @crop.pest %></div>
          </li>
      
          <li>
            <div class="itemLabel">Disease</div>
            <div class="itemValue"><%= @crop.disease %></div>
          </li>
      
          <li>
            <div class="itemLabel">Timestamps</div>
            <div class="itemValue"><%= @crop.timestamps %></div>
          </li>
      
          <li>
            <div class="itemLabel">ImageUri</div>
            <div class="itemValue"><%= @crop.image_uri %></div>
          </li>
      
    </ul>
  </div>

</div>
